  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber": "^10.3.2",
    "@playwright/test": "^1.42.1",
    "@types/node": "^20.11.30",
    "playwright-bdd": "^6.0.3"
  },
  "scripts": {
    "test": "npx bddgen && npx playwright test",
    "test:ui": "npx bddgen && npx playwright test --ui",
    "code-gen": "npx playwright codegen",
    "watch:bdd": "nodemon -w ./src/e2e/features -w ./src/e2e/steps -e feature,js,ts --exec 'npx bddgen'",
    "watch:pw": "playwright test --ui",
    "watch": "run-p watch:*"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  }
}
